<div class="card">
  <div class="card-body">
    <h3><i class="fas fa-key"></i> Reset Password</h3>

    <form action="/users/reset/{{ user._id }}" method="POST">
      <div class="form-group">
        <label for="password">New Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="New Password"
          value="{{ password }}"
        />
      </div>
      <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input
          type="password"
          id="password2"
          name="password2"
          class="form-control"
          placeholder="Confirm New Password"
          value="{{ password2 }}"
        />
      </div>
      <div class="section">
        <button type="submit" class="btn btn-primary">Reset</button>
      </div>
    </form>
    <p class="lead mt-4">
      Remembered your password? <a href="/">Return to Login</a>
    </p>
  </div>
</div>
