<div class="container">
  <div class="row">
    <div class="col-md-4 order-md-2 col-sm-12 order-sm-1">
      <div class="card">
        <div class="card-body">User</div>
      </div>
    </div>
    <div class="col-md-8 order-md-1 col-sm-12 order-sm-1">
      <h5>Stories</h5>
      {{#if stories}}
      <ul class="list-group">
        {{#each stories}}
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <a href="/stories/{{ _id }}">{{ title }}</a>
          <span>{{formatDate createdAt 'M/D'}}</span>
          <span class="dash-status">
            {{ status }}
          </span>
          <a href="/stories/edit/{{ _id }}">
            <i class="fas fa-edit"></i>
          </a>
          <form action="/stories/{{ _id }}" method="POST" id="delete-form">
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit" class="btn red">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
</div>

