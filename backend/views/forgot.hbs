<h5>
  <i class="fas fa-unlock-alt"></i>
  Forgot Password
</h5>
<div class="card shadow-card">
    <div class="card-body">
      <form action="/users/forgot" method="POST">
        <div class="subtitle">Enter your email below and we'll send you a link to reset it.</div>
        <div class="form-group">
          <input
            type="text"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            value="{{ email }}"
          />
        </div>
        <div class="section">
          <button type="submit" class="btn btn-primary">
            Send password reset email
          </button>
        </div>
      </form>
      <div class="bottom-link">
        <small><a href="/">< Go back</a></small>
      </div>
    </div>
  </div>
</div>
